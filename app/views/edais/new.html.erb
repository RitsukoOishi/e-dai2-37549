<h3>収支を登録する</h3>
  <%= form_with model: @edai, local: true do |f|%>
    <div class="field">
      <%= f.label :balance_id, "収入/支出" %><br />
      <%= f.collection_select(:balance_id, Balance.all, :id, :name, {}, {class:"balance-select"}) %>
    </div>

    <div class="field">
      <%= f.label :entry_day, "日付" %><br />
      <%= f.text_area :entry_day, class: :form__text, id:"entry_day" %>
    </div>

    <div class="field">
      <%= f.label :genre_id, "項目" %><br />
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="field">
      <%= f.label :description, "摘要" %><br />
      <%= f.text_area :description, class: :form__text, id:"description" %>
    </div>
    <div class="field">
      <%= f.label :price, "金額" %><br />
      <%= f.text_area :price, class: :form__text, id:"price" %>
    </div>
    <div class="field">
      <%= f.label :user_id, "登録者" %><br />
      <%= f.text_area :user_id, class: :form__text, id:"user_id" %>
    </div>

    <div class="actions">
      <%= f.submit "保存する", class: :form__btn  %>
    </div>
  <% end %>